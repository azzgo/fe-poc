{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es6",
      "dom"
    ],
    "strictNullChecks": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}