{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "src/*": ["./src/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "declaration": false,
    "lib": ["es6", "dom"],
    "outDir": "./build",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "stories/**/*.ts",
    "stories/**/*.tsx"
  ]
}
